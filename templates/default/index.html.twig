<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>API Documentation</title>
		<style>
			body {
				margin: 0;
				padding: 0;
				font-family: Arial, sans-serif;
			}
			.container {
				padding: 20px;
			}
			h1 {
				font-size: 28px;
				margin-bottom: 20px;
			}
			h2 {
				font-size: 24px;
				margin-bottom: 10px;
			}
			h3 {
				font-size: 20px;
				margin-bottom: 10px;
			}
			p {
				margin-top: 0;
				margin-bottom: 10px;
			}
			.section {
				margin-bottom: 30px;
			}
			.method {
				margin-top: 20px;
				margin-bottom: 10px;
				font-weight: bold;
			}
			.endpoint {
				margin-top: 10px;
			}
			.endpoint pre {
				background-color: #f5f5f5;
				padding: 10px;
			}
			.parameter {
				margin-top: 10px;
				margin-bottom: 10px;
			}
			.parameter table {
				width: 100%;
				border-collapse: collapse;
			}
			.parameter table th,
			.parameter table td {
				padding: 5px;
				border-bottom: 1px solid #ccc;
			}
			.parameter table th {
				text-align: left;
				font-weight: bold;
			}
			.response {
				margin-top: 10px;
			}
			.response pre {
				background-color: #f5f5f5;
				padding: 10px;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>API Documentation</h1>

			<div class="section">
				<div class="endpoint">
					<h3>GET /scores</h3>
				</div>
			</div>

			<div class="section">
				<div class="endpoint">
					<h3>POST /scores</h3>

					<h4 class="parameter">Parameters:</h4>
					<table>
						<tr>
							<th>Name</th>
							<th>Type</th>
						</tr>
						<tr>
							<td>playerName</td>

							<td>string</td>
						</tr>
						<tr>
							<td>scoreValue</td>
							<td>integer</td>
						</tr>
					</table>
				</div>

			</div>
		</div>
	</body>
</html>
